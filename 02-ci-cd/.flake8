[flake8]
# Flake8 configuration for code quality

max-line-length = 120
exclude =
    __pycache__,
    .git,
    .pytest_cache,
    venv,
    env,
    logs,
    data,
    frontend

# Ignore specific errors
# E203: whitespace before ':'
# E501: line too long (handled by max-line-length)
# W503: line break before binary operator
ignore =
    E203,
    E501,
    W503

# Complexity
max-complexity = 10
